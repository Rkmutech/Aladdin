<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="shortcut icon" type="images/x-icon" href="/images/favicon.png">
    <link rel="stylesheet" type="text/css" href="/css/AdminArea.css" />
    
    <title>Admin | Inventory</title>
</head>

<body>
    <div id="mySidenav" class="sidenav">
        <p class="logo"><span>A</span>-Aladdin</p>
        <a class="/AdminArea" href="#"><i class="fa fa-home"></i>&nbsp;&nbsp;Home</a>
        <a href="/AdminArea" class="icon-a"><i class="fa fa-dashboard icons"></i> &nbsp;&nbsp;Dashboard</a>
        <a href="/user" class="icon-a"><i class="fa fa-users icons"></i> &nbsp;&nbsp;Customers</a>
        <a href="/inventory" class="icon-a"><i class="fa fa-tasks icons"></i> &nbsp;&nbsp;Inventory</a>
        <a href="/report" class="icon-a"><i class="fa fa-tasks icons"></i> &nbsp;&nbsp;REPORT</a>
        <a href="/add" class="icon-a"><i class="fa fa-list-alt icons"></i> &nbsp;&nbsp;Add</a>
    </div>
    <div id="main">

        <div class="head">
            <div class="col-div-6">
                <span style="font-size:30px;cursor:pointer; color: white;" class="nav">&#9776; Dashboard</span>
                <span style="font-size:30px;cursor:pointer; color: white;" class="nav2">&#9776; Dashboard</span>
            </div>

            <div class="col-div-6">
                <div class="profile">

                    <img src="/images/user.png" class="pro-img" />
                    <p>Ram Kumar <span>Admin</span></p>
                </div>
            </div>

        </div>
        
    <div class="main-content">
        <main class="user">
            <div class="recent-grid">
                <div class="product">
                    <div class="card">
                        <div class="card-header">
                            <h3>Inventory List</h3>
                            <button onclick="location.href='/addinventory'" class="user-wrapper"><img src="https://img.icons8.com/material-rounded/24/ffffff/plus--v1.png" style="margin-right: 5px;"/> Add Inventory Item</button>
                        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table width="100%">
                    <thead>
                        <tr>
                            <td>Inventory ID</td>
                            <td>pro Image</td>
                            <td>pro Name</td>
                            <td>Quantity</td>
                            <td>Price</td>
                            <td>pro Availabilty</td>
                            <td>Inventory Add Date</td>
                            <td>Actions</td>
                        </tr>
                        <tbody>
                            <%
                                            if(inventoryData.length!=0){
                                            inventoryData.forEach(function(data){
                                            %>
                                                <tr>
                                                    <td>
                                                        <%=data.inventory_id %>
                                                    </td>
                                                    <td><img src="http://localhost:8080/images/upload_images/<%=data.pro_img %>" width="100px" height="130px" alt=""></td>
                                                    <td>
                                                        <%=data.pro_name %>
                                                    </td>
                                                    <td>
                                                        <%=data.quantity %>
                                                    </td>
       
                                                    <td>
                                                        <%=data.pro_price %>
                                                    </td>
                                                    <td>
                                                        <%=data.pro_availability %>
                                                    </td>
                                                    <td>
                                                        <%=data.create_date %>
                                                    </td>
                                                    <td>
                                                        <div class="delete">
                                                            <a href="/editinventory/<%=data.inventory_id %>"><img src="https://img.icons8.com/external-kiranshastry-lineal-color-kiranshastry/30/000000/external-edit-interface-kiranshastry-lineal-color-kiranshastry.png" /></a>
                                                            <a href="/deleteinventory/<%=data.inventory_id %>"><img src="https://img.icons8.com/external-kiranshastry-lineal-color-kiranshastry/30/26e07f/external-delete-miscellaneous-kiranshastry-lineal-color-kiranshastry.png" /></a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else{ %>
                                                        <tr>
                                                            <td colspan="8" align="center" style="font-size:25px;">No Data Found!</td>
                                                        </tr>
                                                        <% } %>
                                                        
                                        </tbody>
</body>

</html>